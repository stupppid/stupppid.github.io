<div page="lifegame">
    <div id="wd" class="world"></div>
    <div class="options">
        <form>
            <label><%= locals.lang.lifegame.form.width %>:</label><input id="a" type="number" min='0' max="100" value="20" placeholder="<%= locals.lang.lifegame.form.width %>"/><br/>
            <label><%= locals.lang.lifegame.form.height %>:</label><input id="b" type="number" min='0' max="100" value="20" placeholder="<%= locals.lang.lifegame.form.height %>"/><br/>
            <label><%= locals.lang.lifegame.form.liveRate %>:</label><input id="p" type="number" min='0' max="1" value="0.3" step="0.1" placeholder="<%= locals.lang.lifegame.form.liveRate %>,0-1"/><br/>
            <label><%= locals.lang.lifegame.form.interval %>(ms):</label><input id="time" type="number" min='0' value="100" placeholder="<%= locals.lang.lifegame.form.interval %>(ms)"/><br/>
            <label><%= locals.lang.lifegame.form.initialSet %>:</label><input id="initStatus" type="text" value="[[0,0,1],[1,0,1],[0,1,1]]" placeholder="初始状态"/><a id="useInitStatus"><%= locals.lang.lifegame.form.apply %></a><br/>
        </form>
        <br/>
        <button id="start"><%= locals.lang.lifegame.options.start %></button>
        <button id="rand"><%= locals.lang.lifegame.options.random %></button>
        <button id="slider"><%= locals.lang.lifegame.options.slider %></button>
        <button id="shadow"><%= locals.lang.lifegame.options.shadow %></button>
        <button id="clear"><%= locals.lang.lifegame.options.clear %></button>
        <div class="tip-group">
            <h4>
                <%= locals.lang.lifegame.tip.title %>
            </h4>
            <ol>
                <li>
                    <%= locals.lang.lifegame.tip.p1 %>
                </li>
                <li>
                    <%= locals.lang.lifegame.tip.p2 %>
                </li>
            </ol>
        </div>
    </div>
</div>
